<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>

<BorderPane fx:controller="com.company.TicTacToeController" xmlns:fx="http://javafx.com/fxml">
    <top>
        <Label fx:id="lblStatus" text="Player X's turn" style="-fx-font-size: 18px;" BorderPane.alignment="CENTER"/>
    </top>
    <center>
        <GridPane alignment="CENTER" hgap="10" vgap="10">
            <Button fx:id="btn00" onAction="#handleButtonClick" prefHeight="100" prefWidth="100" style="-fx-font-size: 24px;"/>
            <Button fx:id="btn01" onAction="#handleButtonClick" prefHeight="100" prefWidth="100" style="-fx-font-size: 24px;" GridPane.columnIndex="1"/>
            <Button fx:id="btn02" onAction="#handleButtonClick" prefHeight="100" prefWidth="100" style="-fx-font-size: 24px;" GridPane.columnIndex="2"/>
            <Button fx:id="btn10" onAction="#handleButtonClick" prefHeight="100" prefWidth="100" style="-fx-font-size: 24px;" GridPane.rowIndex="1"/>
            <Button fx:id="btn11" onAction="#handleButtonClick" prefHeight="100" prefWidth="100" style="-fx-font-size: 24px;" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            <Button fx:id="btn12" onAction="#handleButtonClick" prefHeight="100" prefWidth="100" style="-fx-font-size: 24px;" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
            <Button fx:id="btn20" onAction="#handleButtonClick" prefHeight="100" prefWidth="100" style="-fx-font-size: 24px;" GridPane.rowIndex="2"/>
            <Button fx:id="btn21" onAction="#handleButtonClick" prefHeight="100" prefWidth="100" style="-fx-font-size: 24px;" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            <Button fx:id="btn22" onAction="#handleButtonClick" prefHeight="100" prefWidth="100" style="-fx-font-size: 24px;" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
        </GridPane>
    </center>
</BorderPane>
